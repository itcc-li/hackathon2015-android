<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/LinearLayout1"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    >    <ListView        android:id="@android:id/list"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:drawSelectorOnTop="false"        />    <TextView        android:id="@android:id/empty"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:paddingLeft="@dimen/standard_margin"        android:paddingRight="@dimen/standard_margin"        android:text="@string/txt_no_pois_available"        android:gravity="center"        android:visibility="gone"        /></LinearLayout>